 
    // only emergency vehicles may change to the opposite side on a multi-lane road
    if (myChangeToOpposite && myChanger.size() > 1 && vehicle->getVClass() == SVC_EMERGENCY && !vehicle->getLaneChangeModel().isOpposite()) {
        const MSLeaderDistanceInfo& leaders = myCandi->aheadNext;
        if (leaders.hasVehicles()) {
            std::pair<MSVehicle*, double> leader = findClosestLeader(leaders, vehicle);
            if (leader.first != nullptr && changeOpposite(leader)) {
                return true;
            }
        }
    }
